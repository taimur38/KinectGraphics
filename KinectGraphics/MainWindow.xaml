<Window x:Class="KinectGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectGraphics"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Canvas Name="canvas">
            <Viewport3D ClipToBounds="True" Width="1920" Height="1080" Canvas.Left="0" Canvas.Top="0" Name="viewport3d" />
            <Button Name="click" Content="set 0" Click="click_Click" />
        </Canvas>
    </Grid>
</Window>
